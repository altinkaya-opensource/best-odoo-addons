<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-inherit="web.TranslationDialog" t-inherit-mode="extension" owl="1">

        <!-- Translate all buttons -->
        <xpath expr="//div[hasclass('o_translation_dialog')]" position="before">
            <button t-if="props.deepl_enabled" class="btn oe_button btn-primary oe_translate_all_btn mb-3"
                    t-on-click="onClickTranslateAll">
                <span><i class="fa fa-globe"/> Translate All</span>
            </button>
        </xpath>
        <!-- Adds translate button on single field. -->

        <xpath expr="//div[hasclass('translation')]" position="inside">
                <button t-if="props.deepl_enabled"
                        t-att-title="term.base_lang + ' -> ' + term.lang"
                        class="btn oe_button btn-primary oe_translate_btn my-2"
                        t-att-data-field-type="props.isText ? 'textarea' : 'input'"
                        t-att-data-lang="term.lang"
                        t-att-data-base-lang="term.base_lang"
                        t-att-data-is-user-lang="term.lang === props.user_lang ? 'true' : 'false'"
                        t-on-click="onClickTranslate">
                    <span><i class="fa fa-globe"/></span>
                </button>
        </xpath>

    </t>
</templates>